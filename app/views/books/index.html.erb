<center><h1>Books</h1></center>

<%= page_entries_info @books %>

<table class='table table-striped'>
  <thead class='thead-dark'>
  <tr>
    <th scope='col'>#</th>
    <th scope='col'>Name</th>
    <th scope='col'>State</th>
    <th scope='col'>Description</th>
    <th colspan='3' scope='col'>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @books.each_with_index do |book, index| %>
    <tr>
      <td scope='row'><%= index + 1 %></td>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= truncate(book.summary, length: 75, omission: '... (continued)') %></td>
      <td colspan="3">
        <%= link_to 'Show', book, class: 'btn btn-outline-secondary' %>
        <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-outline-secondary' %>
        <% if book.status == 'returned' %>
          <%= link_to 'Rent', rent_book_path(book.id), method: :post, class: 'btn btn-outline-dark' %>
        <% else %>
          <%= link_to 'Return', return_book_path(book.id), method: :post, class: 'btn btn-outline-dark' %>
        <% end %>
        <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-dark' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @books, class: 'page-item' %>

<%= link_to 'New Book', new_book_path, class: "btn btn-dark" %>
